@model CondoEntity.UserDbModel

@{
    ViewBag.Title = "AdminProfile";
    Layout = "~/Views/Shared/_LayoutAdminDashboard.cshtml";
}

<h2>User Profile</h2>

<div>
    <hr />
    @if (TempData["UpdateAdminMessage"] != null)
    {
        <div class="alert alert-success alert-dismissable" id="editmsg">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Success! </strong> @TempData["UpdateAdminMessage"]
        </div>
    }
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<p style="padding-left:80%;">
    @Html.ActionLink("Edit", "UpdateAdmin","Admin",new { UserId = Session["UserId"] }, new { @class = "btn btn-info" }) &nbsp;
</p>
